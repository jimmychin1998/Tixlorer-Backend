@{
    ViewBag.Title = "Login";
}
<div class="container align-center" style="width:100%;height:100%;">
    <div class="row mx-auto" style="position:relative;width:300px;height:300px;top:50px;">
        <h2>員工登入</h2>
        @using (Html.BeginForm(FormMethod.Post, new { @class = "form-control" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="mb-4">請輸入帳號與密碼</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mb-3">
                    <label class="form-label">員工帳號</label>
                    @Html.TextBox("txtStaffAccount", "", new { htmlAttributes = new { @class = "form-control" } , placeholder="請輸入帳號"})

                </div>
                <div class="form-group mb-3">
                    <label class="form-label">員工密碼</label>
                    @Html.Password("txtStaffPassword", "", new { htmlAttributes = new { @class = "form-control" } , placeholder="請輸入密碼" })
                </div>
                <div class="mb-3">
                    @Html.ValidationMessage("LoginError", "",new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="登入" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
