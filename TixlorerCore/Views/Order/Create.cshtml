@model TixlorerCore.Models.Order

@{
    ViewData["Title"] = "Create";
}
<div class="container">
<h1 class="d-flex justify-content-center">新建訂單</h1>
<hr />
<div class="row mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-4">
            <div class="form-group">
                <input asp-for="OrderId" class="form-control" type="hidden" />@*隱藏ID*@
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">會員編號</label>
                <input asp-for="MId" class="form-control" />
                <span asp-validation-for="MId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">訂單金額</label>
                <input asp-for="Totalprice" class="form-control" />
                <span asp-validation-for="Totalprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">訂單日期</label>
                <input asp-for="Orderdate" class="form-control" />
                <span asp-validation-for="Orderdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">結單日期</label>
                <input asp-for="OrderdateEnd" class="form-control" />
                <span asp-validation-for="OrderdateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">訂單狀態</label><br />
                <select asp-for="State" style="width:50%;height:30px" class="mb-3">
                    <option value="0">未付款</option>
                     <option value="1">已付款</option>
                     <option value="2">已取票</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">

        </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
                <a asp-action="List">
                <input type="button" class="btn btn-primary" value="離開">
                </a>
            </div>
        </form>
    </div>
</div>
   
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
